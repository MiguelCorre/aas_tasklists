<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:~/tasklistsd</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">foobar</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>      
        <mapping class="org.ual.aas.tasklists.models.TaskList"/>
        <mapping class="org.ual.aas.tasklists.models.Task"/>
    </session-factory>
</hibernate-configuration>